{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('confirmationPage.title') }}</h1>

    <div>

        <h2>
            <a class="button-link transparent" href="timeframe">{{ __('confirmationPage.timeFrameTitle') }}</a>
        </h2>

        <h2>
            <a class="button-link transparent" href="contactInfo">{{ __('confirmationPage.contactTitle') }}</a>
        </h2>
        {% if data.contactInfoPage_fullName != "" or data.contactInfoPage_emailAddress != "" or data.contactInfoPage_postalCode != "" %}
            <div>
                <div>{{ data.contactInfoPage_fullName }}</div>
                <div>{{ data.contactInfoPage_emailAddress }}</div>
                <div>{{ data.contactInfoPage_postalCode }}</div>
            </div>
        {% else %}
            <div>{{ __('confirmationPage.contactIntro')}}</div>
        {% endif %}

        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            {{ formButtons('button.submit') }}
        </form>
    </div>

{% endblock %}