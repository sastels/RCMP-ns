{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('contactInfoPage.title') }}</h1>

    <div>
        <p>
            {{ __('contactInfoPage.intro') }}
        </p>

        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            {{ textInput('contactInfoPage_fullName', 'contactInfoPage.fullName') }}
            {{ textInput('contactInfoPage_emailAddress', 'contactInfoPage.emailAddress') }}
            {{ textInput('contactInfoPage_postalCode', 'contactInfoPage.postalCode') }}
            {{ formButtons('contactInfoPage.nextButton') }}
        </form>
    </div>

{% endblock %}